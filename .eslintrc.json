{
    "parser": "@typescript-eslint/parser",
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "settings": {
        "react": {
            "version": "latest"
        }
    },
    "rules": {
      "linebreak-style": [
          "error",
          "windows"
      ],
      "quotes": [
          "error",
          "single"
      ],
      "jsx-quotes": [
          "error",
          "prefer-single"
      ],
      "semi": [
          "error",
          "always"
      ],
      "no-var": "error",
      "no-multi-spaces": "error",
      "no-whitespace-before-property": "error",
      "eol-last": [
          "error",
          "always"
      ],
      "eqeqeq": [
          "error",
          "always"
      ],
      "indent": [
          "error",
          2,
          {
              "SwitchCase": 1
          }
      ],
      "no-mixed-spaces-and-tabs": "error",
      "rest-spread-spacing": [
          "error",
          "never"
      ],
      "prefer-const": "error",
      "react/prop-types": 0,
      "space-before-function-paren": [
          "error",
          "never"
      ]
    }
  }